$('.flash').html('<%= flash[:notice] %>');
<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').html("<%= j message %>");
  <% end %>
<% else %>
  $("#question-<%= @question.id %>").html("<%= j @question.title %>");
  $("#question-<%= @question.id %>").html("<%= j @question.body %>");
  $(".edit-question-link").click(function(e) {
    e.preventDefault();
    $(this).hide();
    question_id = $(this).data("questionId");
    $("form#edit-question-" + question_id).show();
});
<% end %>
